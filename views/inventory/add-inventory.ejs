<main class="form-main">
    <div class="container">
        <h1>Add New Vehicle</h1>
        
        <!-- Flash Messages -->
        <% if (messages && messages.length > 0) { %>
            <div class="flash-messages">
                <% messages.forEach(message => { %>
                    <div class="flash-message <%= message.type %>">
                        <%= message.msg %>
                    </div>
                <% }) %>
            </div>
        <% } %>

        <form action="/inv/add-inventory" method="post" class="inventory-form">
            <div class="form-row">
                <div class="form-group">
                    <label for="inv_make">Make:</label>
                    <input type="text" name="inv_make" id="inv_make" 
                            value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>" required>
                </div>
                
                <div class="form-group">
                    <label for="inv_model">Model:</label>
                    <input type="text" name="inv_model" id="inv_model" 
                            value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>" required>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="inv_year">Year:</label>
                    <input type="number" name="inv_year" id="inv_year" 
                            value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>" 
                            min="1900" max="<%= new Date().getFullYear() + 1 %>" required>
                </div>
                
                <div class="form-group">
                    <label for="classification_id">Classification:</label>
                    <%- classificationList %>
                </div>
            </div>

            <div class="form-group">
                <label for="inv_description">Description:</label>
                <textarea name="inv_description" id="inv_description" required><%= typeof inv_description !== 'undefined' ? inv_description : '' %></textarea>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="inv_image">Image Path:</label>
                    <input type="text" name="inv_image" id="inv_image" 
                            value="<%= typeof inv_image !== 'undefined' ? inv_image : '/images/no-image.jpg' %>" required>
                </div>
                
                <div class="form-group">
                    <label for="inv_thumbnail">Thumbnail Path:</label>
                    <input type="text" name="inv_thumbnail" id="inv_thumbnail" 
                            value="<%= typeof inv_thumbnail !== 'undefined' ? inv_thumbnail : '/images/no-image-tn.jpg' %>" required>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label for="inv_price">Price:</label>
                    <input type="number" name="inv_price" id="inv_price" 
                            value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>" 
                            step="0.01" min="0" required>
                </div>
                
                <div class="form-group">
                    <label for="inv_miles">Mileage:</label>
                    <input type="number" name="inv_miles" id="inv_miles" 
                            value="<%= typeof inv_miles !== 'undefined' ? inv_miles : '' %>" 
                            min="0" required>
                </div>
            </div>

            <div class="form-group">
                <label for="inv_color">Color:</label>
                <input type="text" name="inv_color" id="inv_color" 
                        value="<%= typeof inv_color !== 'undefined' ? inv_color : '' %>" required>
            </div>

            <% if (errors && errors.length > 0) { %>
                <div class="error-messages">
                    <% errors.forEach(error => { %>
                        <div class="error-message"><%= error.msg %></div>
                    <% }) %>
                </div>
            <% } %>
            
            <button type="submit" class="btn btn-primary">Add Vehicle</button>
        </form>
    </div>
</main>
