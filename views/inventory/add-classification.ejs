<h1>Add New Classification</h1>

<% if (message) { %>
  <div class="flash-message error"><%= message %></div>
<% } %>

<form action="/inv/add-classification" method="POST" id="registrationForm">
  <label for="classification_name">Classification Name</label>
  <input 
    type="text" 
    id="classification_name" 
    name="classification_name" 
    required 
    pattern="^[A-Za-z0-9]+$" 
    title="Classification name must not contain spaces or special characters."
    value="<%= typeof classification_name !== 'undefined' ? classification_name : '' %>"
  />

  <% if (errors && errors.classification_name) { %>
    <span class="field-error"><%= errors.classification_name.msg %></span>
  <% } %>

  <button type="submit">Add Classification</button>
</form>
